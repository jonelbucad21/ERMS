@model IEnumerable<MultiLevel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel --> 
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/adminLte/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Alexander Pierce</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->

        
        <ul class="sidebar-menu" data-widget="tree">

            <li class="header">Navigations</li>

            @foreach (var multiLevel in Model)
            {   
                <li class="active treeview">
                    <a href="@Url.Action(multiLevel.Action, multiLevel.Controller)">
                        <i class="@multiLevel.FontAwesome"></i> <span> @multiLevel.LevelName</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    
                    <ul class="treeview-menu">
                        @foreach (var levelOne in multiLevel.LevelOnes)
                        {
                            <li class="active"><a href="@Url.Action(levelOne.Action, levelOne.Controller)"><i class="fa fa-circle-o"></i> @levelOne.LevelName </a></li>
                        }
                    </ul>
                </li>

            }

        </ul>

    <!-- /.sidebar -->

    
    </section>

</aside>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <section class="content-header">
        <h1>
            Incoming Communications
            <small>Communications</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Communications</a></li>
            <li class="active">List of Communications</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="box collapsed-box">
            <div class="box-header with-border">
                <h3 class="box-title">Search Options</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Letter Type</label>
                            <select id="LetterType-Select" class="form-control select2" style="width: 100%;"></select>
                            <div class="form-group">
                                <label>Sender</label>
                                <select id="Sender-Select" class="form-control select2" style="width: 100%;"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Title</label>
                            <textarea id ="Title-TextArea" class="form-control" rows="3" placeholder="Enter Title..."></textarea>
                            <br />
                            <button id ="btnSearch" type="button" class="form-control btn btn-block btn-primary btn-flat">Search</button>

                        </div>
                    </div>

                </div>


            </div>
        </div>
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Letters Table</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">


                <br />
                <div class="table-responsive">

                    <table id="Letters" class="table table-striped table-bordered table-hover responsive" width='100%' auto-width="true">
                        <thead>
                            <tr>
                                <td>id</td>
                                <td>title</td>
                                <td>Summary</td>
                                <td>Type</td>
                                <td>Sender</td>
                                <td>Date Created</td>
                                <td>Date Received</td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                       
                    </table>
                    <div class="col-sm-6">
                        Showing 0 to 0 entries
                    </div>
                    
                    <div class="col-sm-6">
                        <ul class="pagination pull-right" style="margin-top:0">
                            <li class="active"><a href="#">Previous</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">Next</a></li>
                        </ul>
                    </div>

                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                Footer
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</form>






        


@section Scripts
{
<link href="~/adminLte/bower/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet"/>
<link href="~/adminLte/bower/datatables-responsive/css/responsive.bootstrap.min.css" rel="stylesheet"/>

<script src="~/customJS/LetterTypes-Select.js"></script>
<script src="~/customJS/Senders-Select.js"></script>
<script src="~/adminLte/bower/datatables.net/js/jquery.dataTables.js"></script>
<script src="~/adminLte/bower/datatables.net-bs/js/dataTables.bootstrap.js"></script>
<script src="~/adminLte/bower/datatables-responsive/js/dataTables.responsive.min.js"></script>
 <script src="~/customJS/Letters-Datatable.js"></script>
<script src="~/customJS/DatatableTest.js"></script>
}


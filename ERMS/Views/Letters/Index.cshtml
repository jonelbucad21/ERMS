
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Incoming Communications
            <small>Communications</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Communications</a></li>
            <li class="active">List of Communications</li>
        </ol>
    </section>


    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Title</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <form>
                <div class="table-responsive">
                    <table id="Letters" class="table table-striped table-bordered table-hover responsive" width='100%' auto-width="true">
                        <thead>
                            <tr>
                                <td>id</td>
                                <td>title</td>
                                <td>Summary</td>
                                <td>Type</td>
                                <td>Sender</td>
                                <td>Date Created</td>
                                <td>Date Received</td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                </form>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                Footer
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->







        


@section Scripts
{
<link href="~/adminLte/bower/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet"/>
<link href="~/adminLte/bower/datatables-responsive/css/responsive.bootstrap.min.css" rel="stylesheet"/>

<script src="~/adminLte/bower/datatables.net/js/jquery.dataTables.js"></script>
<script src="~/adminLte/bower/datatables.net-bs/js/dataTables.bootstrap.js"></script>
<script src="~/adminLte/bower/datatables-responsive/js/dataTables.responsive.min.js"></script>

<script>
        $(document).ready(function () {
            $("#Letters").DataTable({
                responsive: true,
                processing: true,
                serverSide: true,
                language: { "info": "Showing _START_ to _END_ of _TOTAL_ entries" },
     

                ajax: {
                    url: "/api/Letters",
                    dataSrc: "data"
      



                },
                columns: [
                    {
                        data: "Id",
                        name: "Id",
                        autoWidth: true

                    },
                    {
                        data: "Title",
                        name: "Title",
                        autoWidth: true

                    },
                    {
                        data: "Summary",
                        name: "Summary",
                        autoWidth: true

                    },
                    {
                        data: "LetterType.Name",
                        name: "LetterType",
                        autoWidth: true



                    },
                    {
                        data: "Sender.Name",
                        name: "Sender",
                        autoWidth: true
                    

                    },
                    {
                        data: "GetDateCreated",
                        name: "DateCreated",
                        autoWidth: true

                    },
                    {

                        data: "GetEntryDate",
                        name: "EntryDate",
                        autoWidth: true

                    }
                ]
                

            });
        });

</script>

}

